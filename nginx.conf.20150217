
user  nginx;
worker_processes  1;

error_log  /var/log/nginx/error.log warn;
pid        /var/run/nginx.pid;

worker_rlimit_nofile 85535;

events {
    worker_connections  80192;
    use epoll;
}


http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;

    server_name_in_redirect off;
    server_tokens      off;

    sendfile           on;
    tcp_nopush         off;

    keepalive_timeout  30;

    client_max_body_size    256m;
    client_body_buffer_size 256k;


    types_hash_max_size 2048;
    proxy_headers_hash_max_size 2048;
    proxy_headers_hash_bucket_size 512;
    output_buffers   32          8m;
    open_file_cache max=80000 inactive=30s;
    open_file_cache_valid    30s;
    open_file_cache_min_uses 2;
    open_file_cache_errors   on;
    



    gzip              on;
    gzip_http_version 1.0;
    gzip_vary         on;
    gzip_comp_level   6;
    gzip_types        text/plain
                      text/xml
                      text/css
                      text/javascript
                      application/xhtml+xml
                      application/xml
                      application/rss+xml
                      application/atom_xml
                      application/javascript
                      application/x-javascript
                      application/x-httpd-php;
    gzip_disable      "MSIE [1-6]\.";

    proxy_buffering         on;
    proxy_ignore_client_abort on;

    proxy_set_header      Host $host;
    proxy_set_header      X-Forwarded-For $remote_addr;
    proxy_set_header      X-Port                  '80';
    proxy_cache_key       "$host$request_uri";


    proxy_cache_path      /dev/shm/    levels=1:1    keys_zone=c2:256m    inactive=30d  max_size=10G;

    proxy_set_header  Host               $host;
    proxy_set_header  X-Real-IP          $remote_addr;
    proxy_set_header  Remote-Addr        $remote_addr;
    proxy_set_header  X-Forwarded-Host   $host;
    proxy_set_header  X-Forwarded-Server $host;
    proxy_set_header  X-Forwarded-For    $proxy_add_x_forwarded_for;
    proxy_set_header  Accept-Encoding    "";
    proxy_set_header  X-UA-Detect        $mobile;
    proxy_ignore_headers                    "Expires" "Cache-Control" "Set-Cookie";
    proxy_hide_header X-Pingback;
    proxy_hide_header Link;
    proxy_hide_header ETag;
    proxy_connect_timeout 300;
    proxy_send_timeout    300;
    proxy_read_timeout    300;


    include /etc/nginx/conf.d/*.conf;
}
